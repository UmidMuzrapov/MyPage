@page "/coursework"

@inject HttpClient Http

<style>

    #contaienr1{
        width:90%;
        height:90%;
        margin:auto;
        background: rgba(256, 256, 256, 0);
    }

    @@media only screen and (max-width: 800px){
        #container2{

            display: grid;
            grid-template-rows:1fr 1fr;
            gap:10px 20px;
        }}

        @@media only screen and (min-width: 801px){
        #container2{

            display: grid;
            grid-template-columns:1fr 1fr;
            gap:0 20px;
        }}

    #schoolwork, #books, #onlinecourses{
       background:white;
       padding: 10px;
       border-radius: 10px;
    }
    #schoolwork{
        margin:auto;
    }
    #container3{
        display: grid;
        grid-template-rows:1fr 1fr;
        gap: 20px 0px;
    }

    img{
        width: 50%;
        margin: auto 0;
        padding-left: 20px;
    }

    th, th{
        padding-left: 10px;
    }

    .center{
        text-align:center;
    }

</style>
<div id="container1">
    <div id="container2">
        <div id="schoolwork">
            <h3 class="center">University Courses</h3>
            <TelerikGrid Data="_courseList" Pageable="true" PageSize="5">
            <GridColumns>
                <GridColumn Field="Name" Title="Course" Width="30%"/>
                <GridColumn Field="Description" Title="Description"/>
            </GridColumns>
            </TelerikGrid>

        </div>
        @if (_onlineCourses!=null & _bookList!=null)
        {

            <div id="container3">
                <div id="books">
                    <h3 class="center">Books</h3>
                    <TelerikGrid Data="_bookList" Pageable="true" PageSize="5">
                        <GridColumns>
                            <GridColumn Field="Name" Title="Title"/>
                            <GridColumn Field="Author" Title="Author" Width="30%"/>
                        </GridColumns>
                    </TelerikGrid>
                </div>
                <div id="onlinecourses">
                <h3 class="center">Online Courses</h3>
                <TelerikGrid Data="_onlineCourses" Pageable="true" PageSize="5">
                <GridColumns>
                    <GridColumn Field="Platform" Title="Platform" Width="30%"/>
                    <GridColumn Field="Name" Title="Name"/>
                </GridColumns>
                </TelerikGrid>
            </div>
        </div>
        }
    </div>


</div>


@code {
    private List<Course>? _courseList;
    private List<OnlineCourse>? _onlineCourses;
    private List<Book>? _bookList;

    protected override async Task OnInitializedAsync()
    {
        _courseList=await Http.GetFromJsonAsync<List<Course>>("css/coursework/coursework.json");
        _onlineCourses=await Http.GetFromJsonAsync<List<OnlineCourse>>("css/coursework/onlinecoursework.json");
        _bookList=await Http.GetFromJsonAsync<List<Book>>("css/coursework/books.json");
    }

}
